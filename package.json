{
  "name": "hazardous-role-bot",
  "version": "0.1.0",
  "type": "module",
  "description": "Hazardous Guild Role Bot",
  "main": "src/index.js",
  "scripts": {
    "start": "bun run src/index.js",
    "commands": "bun run src/commands.js",
    "dev": "bun --watch run src/index.js",
    "prod": "pm2 start src/index.js --name hazardous-role-bot --interpreter bun",
    "stop": "pm2 stop hazardous-role-bot",
    "restart": "pm2 restart hazardous-role-bot",
    "logs": "pm2 logs hazardous-role-bot",
    "status": "pm2 status"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
